<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/app_card"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:singleLine="true"
                android:text="App"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtApk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="sans-serif-thin"
                android:text="Package"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:fontFamily="sans-serif-thin"
                android:text="Size"
                android:visibility="visible"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txtInstallationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:fontFamily="sans-serif-thin"
                android:text="InstallationDate"
                android:visibility="visible"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txtName"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="14dp"
                android:adjustViewBounds="true"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                android:src="@drawable/ic_android"
                android:transitionName="@string/transition_app_icon" />



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="90dp"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/btnExtract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/button_extract"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="@color/textColorPrimary"
                    android:textSize="13sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp" />
                <TextView
                    android:id="@+id/btnShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="10dp"
                    android:background="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:text="@string/button_share" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>